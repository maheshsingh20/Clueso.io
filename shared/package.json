{
  "name": "@clueso/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript types and utilities",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --module ES2020 --outDir dist-esm && npm run copy:esm",
    "copy:esm": "node -e \"const fs=require('fs'); fs.copyFileSync('dist-esm/index.js', 'dist/index.mjs'); fs.copyFileSync('dist-esm/types/index.js', 'dist/types.mjs');\"",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}